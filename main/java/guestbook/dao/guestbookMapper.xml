<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="guestbookSQL"><!-- 다른맵퍼들에도 같은 id 쓰면안됨. 그래서 nameSpace 여기에도 들어감 (구분자)-->
 	<insert id="guestbookWrite" parameterType="guestbookDTO">
 		insert into guestbook values(seq_guestbook.nextval,#{name},#{email},#{homepage},#{subject},#{content},sysdate)
 	</insert>
 	<select id="getGuestbookList" parameterType="java.util.Map" resultType="guestbookDTO">
 		select * from (select rownum rn,tt.* from 
 				(select seq
 						,name
 						,email
 						,homepage
 						,subject
 						,content
 						,logtime
 						 from guestbook order by seq desc) tt) 
 				where 
 				<!-- rn between #{startNum} and #{endNum}  이것도가능 -->
 				rn 
 				<!-- <![CDATA[>=]]> 이것도가능 -->
 				&gt;=
 				#{startNum}
 				and rn 
 				<!-- <![CDATA[<=]]> 이것도가능 -->
 				&lt;=
 				#{endNum}
 	</select>
 	
 	<select id="getTotalA" resultType="int">
 		select count(*) from guestbook
 	</select>
 </mapper>